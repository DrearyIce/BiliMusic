<Page x:Class="BiliMusic.Pages.History"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:BiliMusic.Controls"
      xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
      xmlns:adonisEx="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
      xmlns:adonisHp="clr-namespace:AdonisUI.Helpers;assembly=AdonisUI"
      xmlns:local="clr-namespace:BiliMusic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="History">

    <Grid d:Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
        <Controls:IScrollViewer>
            <Controls:IScrollViewer.Content>
                <StackPanel>
                    <TextBlock Text="Today" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <Grid>
                        <ScrollViewer Margin="10,10,0,0" HorizontalScrollBarVisibility="Auto" adonisEx:ScrollViewerExtension.HideScrollBarsUntilMouseOver="True">
                            <StackPanel x:Name="Today" Orientation="Horizontal" Margin="0,0,50,0"/>
                        </ScrollViewer>
                        <Border HorizontalAlignment="Right" Width="40" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
                            <Border.OpacityMask>
                                <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                        </Border>
                    </Grid>
                    <Border Height="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10"/>
                    <TextBlock Text="This Week" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <Grid >
                        <ScrollViewer Margin="10,10,0,0" HorizontalScrollBarVisibility="Auto" adonisEx:ScrollViewerExtension.HideScrollBarsUntilMouseOver="True">
                            <StackPanel x:Name="ThisWeek" Orientation="Horizontal" Margin="0,0,50,0"/>
                        </ScrollViewer>
                        <Border HorizontalAlignment="Right" Width="40" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
                            <Border.OpacityMask>
                                <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                        </Border>
                    </Grid>
                    <Border Height="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10"/>
                    <TextBlock Text="All" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource  NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <Grid>
                        <ScrollViewer Margin="10,10,0,0" HorizontalScrollBarVisibility="Auto" adonisEx:ScrollViewerExtension.HideScrollBarsUntilMouseOver="True">
                            <StackPanel x:Name="AllTime" Orientation="Horizontal" Margin="0,0,50,0"/>
                        </ScrollViewer>
                        <Border HorizontalAlignment="Right" Width="40" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
                            <Border.OpacityMask>
                                <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                        </Border>
                    </Grid>
                    <Border Height="100"/>
                </StackPanel>
            </Controls:IScrollViewer.Content>
        </Controls:IScrollViewer>
    </Grid>
</Page>
