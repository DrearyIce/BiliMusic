<Page x:Class="BiliMusic.Pages.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Controls="clr-namespace:BiliMusic.Controls"
      xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
      xmlns:adonisEx="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
      xmlns:adonisHp="clr-namespace:AdonisUI.Helpers;assembly=AdonisUI"
      xmlns:local="clr-namespace:BiliMusic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="About">

    <Grid d:Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
        <ContentControl ContentTemplate="{DynamicResource {x:Static adonisUi:Icons.AdonisUIGrayscale}}" Foreground="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.4" Width="600" Height="600" Margin="0, 0, -64, -136"/>
        <Controls:IScrollViewer>
            <Controls:IScrollViewer.Content>
                <StackPanel>
                    <TextBlock Text="About BiliMusic" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <StackPanel Margin="10,10,0,0" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Image Source="{StaticResource AppIconDrawingImage}" Width="100" Height="100"/>
                            <StackPanel Margin="10,0" VerticalAlignment="Center">
                                <TextBlock Text="Bili" FontWeight="Bold" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontSize="36" FontFamily="{StaticResource NewYork}"/>
                                <TextBlock Text="Music" FontWeight="Bold" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontSize="36" FontFamily="{StaticResource NewYork}"/>
                            </StackPanel>
                            <Border Width="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10,0"/>
                            <Border Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BackgroundBrush}}" BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.Layer1HighlightBorderBrush}}" BorderThickness="5" CornerRadius="20" Width="100" Height="100">
                                <TextBlock Text="BD" FontSize="48" FontFamily="{StaticResource PingFang}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="10,0" VerticalAlignment="Center">
                                <TextBlock Text="BB" FontWeight="Bold" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontSize="36" FontFamily="{StaticResource NewYork}"/>
                                <TextBlock Text="Down" FontWeight="Bold" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontSize="36" FontFamily="{StaticResource NewYork}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" Width="40" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}">
                        <Border.OpacityMask>
                            <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.OpacityMask>
                    </Border>
                    <Border Height="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10"/>
                    <TextBlock Text="Interface" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                        <ContentControl ContentTemplate="{DynamicResource {x:Static adonisUi:Icons.AdonisUI}}" HorizontalAlignment="Center" Width="100" Height="100"/>
                        <TextBlock Text="Adonis " Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource PingFang}" FontSize="30" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBlock Text="UI" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ErrorBrush}}" FontFamily="{StaticResource PingFang}" FontSize="30" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Border Height="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10"/>
                    <TextBlock Text="Issues" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <Grid >
                        <StackPanel Margin="10,10,0,0" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
                            <TextBlock Text="Github -> Issues" FontSize="15" FontFamily="{StaticResource PingFang}"/>
                        </StackPanel>
                    </Grid>
                    <Border Height="2" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer1BorderBrush}}" Margin="10"/>
                    <TextBlock Text="Contributors" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" FontFamily="{StaticResource  NewYork}" FontWeight="Bold" FontSize="26" Margin="10,0"/>
                    <Grid>
                        <StackPanel Margin="10,10,0,0" TextBlock.Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}">
                            <TextBlock Text="Github -> Contributors" FontSize="15" FontFamily="{StaticResource PingFang}"/>
                        </StackPanel>
                    </Grid>
                    <Border Height="100"/>
                </StackPanel>
            </Controls:IScrollViewer.Content>
        </Controls:IScrollViewer>
    </Grid>
</Page>
